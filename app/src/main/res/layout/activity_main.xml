<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mainbg"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Country 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tunisia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tunisia"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCountry1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show more" />

        </LinearLayout>

        <!-- Country 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/algeria" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algeria"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCountry2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show more" />

        </LinearLayout>

        <!-- Country 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/morocco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morocco"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCountry3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show more" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
